{
    "parameters": {
        "name": {
            "type": "string"
        },
        "storageName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "sku": {
            "type": "string"
        },
        "skuCode": {
            "type": "string"
        },
        "workerSize": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageName')]",
            "location": "[parameters('location')]",
            "properties": {
                "accountType": "Standard_LRS"
            }
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[parameters('name')]",
                "workerSizeId": "[parameters('workerSize')]",
                "reserved": true,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Tier": "[parameters('sku')]",
                "Name": "[parameters('skuCode')]"
            },
            "kind": "linux"
        },
        {
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('name'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageName'))]"
            ],
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "beta"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "python"
                        },
                        {
                            "name": "AZURE_TENANT_ID",
                            "value": "72f988bf-86f1-41af-91ab-2d7cd011db47"
                        },
                        {
                            "name": "AZURE_CLIENT_ID",
                            "value": "fee7b372-b4d4-4369-a8fc-20a72ac4eefc"
                        },
                        {
                            "name": "AZURE_CLIENT_SECRET",
                            "value": "JC720HYh0e2KAsJhrlHVLVCbX1mDfYZ6CR1aMHFiJDw="
                        },
                        {
                            "name": "AZURE_SUBSCRIPTION_ID",
                            "value": "aa98974b-5d2a-4d98-a78a-382f3715d07e"
                        }
                    ],
                    "alwaysOn": true,
                    "appCommandLine": "",
                    "linuxFxVersion": "DOCKER|microsoft/azure-functions-python3.6:dev-nightly"
                },
                "name": "[parameters('name')]",
                "clientAffinityEnabled": false,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('name'))]",
                "hostingEnvironment": ""
            },
            "apiVersion": "2016-03-01",
            "kind": "functionapp,linux",
            "location": "[parameters('location')]"
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}